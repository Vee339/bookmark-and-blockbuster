@{
    ViewData["Title"] = "Home";
}

<!-- 1. Hero Section -->
<div class="hero-section text-center text-white mb-5">
    <div class="hero-overlay"></div>
    <div class="container position-relative">
        <h1 class="display-3 fw-bold hero-title">Welcome to Bookmark & Blockbuster</h1>
        <p class="lead hero-subtitle col-lg-8 mx-auto">
            Your ultimate destination for discovering captivating books, unforgettable movies, talented authors, and our community members.
        </p>
    </div>
</div>

<!-- 2. Content Section (Cards) -->
<div class="container" id="explore">
    <h2 class="text-center mb-4 section-title">Explore Our Sections</h2>

    <div class="row g-4 justify-content-center">

        <!-- Books Card -->
        <div class="col-md-5">
            <div class="card category-card h-100 shadow-sm">
                <img src="~/images/books-banner.jpg" class="card-img-top category-card-img" alt="Books Collection">
                <!-- OR Use Placeholder: <img src="https://placehold.co/600x400/5f9ea0/white?text=Books" class="card-img-top category-card-img" alt="Books Collection"> -->
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Discover Amazing Books</h5>
                    <p class="card-text flex-grow-1">Dive into worlds of fantasy, knowledge, and adventure. Browse our extensive library.</p>
                    <!-- Links to BookPageController -> Index action -->
                    <a asp-controller="BookPage" asp-action="Index" class="btn btn-primary mt-auto align-self-start">Browse Books</a>
                </div>
            </div>
        </div>

        <!-- Movies Card -->
        <div class="col-md-5">
            <div class="card category-card h-100 shadow-sm">
                <img src="~/images/movies-banner.jpg" class="card-img-top category-card-img" alt="Movies Collection">
                <!-- OR Use Placeholder: <img src="https://placehold.co/600x400/4682b4/white?text=Movies" class="card-img-top category-card-img" alt="Movies Collection"> -->
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Explore Great Movies</h5>
                    <p class="card-text flex-grow-1">From timeless classics to the latest blockbusters. Find your next movie night favorite.</p>
                    <!-- Links to MoviePageController -> Index action -->
                    <a asp-controller="MoviePage" asp-action="Index" class="btn btn-primary mt-auto align-self-start">Browse Movies</a>
                </div>
            </div>
        </div>


        <!-- Members Card -->
        <div class="col-md-5">
            <div class="card category-card h-100 shadow-sm">
                <img src="~/images/members-banner.jpg" class="card-img-top category-card-img" alt="Members Directory">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Meet Our Members</h5>
                    <p class="card-text flex-grow-1">Connect with fellow book and movie enthusiasts. See who's part of our community.</p>
                    <!-- Link points to MemberPageController -> Index action (Already Corrected) -->
                    <a asp-controller="MemberPage" asp-action="Index" class="btn btn-primary mt-auto align-self-start">View Members</a>
                </div>
            </div>
        </div>

        <!-- Authors Card -->
        <div class="col-md-5">
            <div class="card category-card h-100 shadow-sm">
                <img src="~/images/authors-banner.jpg" class="card-img-top category-card-img" alt="Authors Directory">
                <!-- OR Use Placeholder: <img src="https://placehold.co/600x400/d2691e/white?text=Authors" class="card-img-top category-card-img" alt="Authors Directory"> -->
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Discover Talented Authors</h5>
                    <p class="card-text flex-grow-1">Learn more about the creators behind your favorite books. Explore author profiles and works.</p>
                    <!-- Links to AuthorPageController -> Index action -->
                    <a asp-controller="AuthorPage" asp-action="Index" class="btn btn-primary mt-auto align-self-start">View Authors</a>
                </div>
            </div>
        </div>

    </div> <!-- End row -->
</div> <!-- End container -->
<!-- Optional: Add some bottom margin to the container -->
<!-- mb-5 provides a large margin. Use mb-3 or mb-2 for smaller margin -->
<div class="mb-3"></div>